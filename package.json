{
  "version": "0.1.0",
  "private": true,
  "name": "argent-x",
  "repository": "github:argentlabs/argent-x",
  "homepage": "https://github.com/argentlabs/argent-x/#readme",
  "devDependencies": {
    "@lavamoat/allow-scripts": "^2.3.0",
    "@lavamoat/preinstall-always-fail": "^1.0.0",
    "bundlewatch": "^0.3.3",
    "husky": "^8.0.0",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": ">=10",
    "prettier": ">=2",
    "prettier-plugin-import-sort": "^0.0.7",
    "ts-node": "^10.8.1",
    "@types/node": "18.11.18",
    "typescript": "^4.9.4"
  },
  "resolutions": {
    "@babel/preset-react": "7.17.12",
    "@babel/plugin-transform-react-jsx": "7.17.12"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "format": "prettier --loglevel warn --write \"**/*.{js,jsx,ts,tsx,css,md,yml,json}\"",
    "dev": "pnpm run -r dev",
    "dev:ui": "pnpm  --filter @argent/ui run dev",
    "build-storybook": "pnpm --filter @argent-x/storybook run build-storybook ",
    "clean": "rm -rf packages/extension/dist packages/get-starket/dist",
    "build": "pnpm run -r build",
    "build:sourcemaps": "GEN_SOURCE_MAPS=true pnpm run build",
    "lint": "pnpm run -r lint",
    "test": "pnpm run -r test",
    "test:watch": "pnpm -r run test:watch",
    "test:e2e": "pnpm -r run test:e2e",
    "prepare": "husky install && pnpm run -r prepare",
    "postinstall": "pnpm patch patches && pnpm run -r postinstall",
    "storybook": "cd packages/storybook && pnpm storybook",
    "devnet:upgrade-helper": "NODE_NO_WARNINGS=1 ts-node ./scripts/devnet-upgrade-helper.ts",
    "devnet:setup-contracts": "NODE_NO_WARNINGS=1 ts-node ./scripts/devnet-setup-contracts.ts",
    "version": "lerna version --no-push --no-git-tag-version && yarn --cwd packages/extension run version"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "bundlewatch": {
    "files": [
      {
        "path": "packages/extension/dist/**/*.*",
        "maxSize": "4mB",
        "compression": "none"
      }
    ]
  },
  "license": "GPL-3.0-only",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md,yml,json}": "prettier --write",
    "*.{ts,tsx}": "eslint --cache --ext .ts,.tsx"
  },
  "lavamoat": {
    "allowScripts": {
      "$root$": true,
      "@lavamoat/preinstall-always-fail": false,
      "nx": false,
      "nx>@parcel/watcher": false,
      "nx>@swc/core": false
    }
  }
}
