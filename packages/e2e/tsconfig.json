{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "@playwright/test"],
    "paths": {
      "*": ["./src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
