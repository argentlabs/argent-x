{
  "compilerOptions": {
    "target": "Esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "importsNotUsedAsValues": "error",
    "resolveJsonModule": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "noEmit": true,
    "skipLibCheck": true,
    "composite": true,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
